{
    "name": "CheckPoint",
    "description": "Save any part of a page any moment in time.",
    "version": "0.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage"],
    "action": {
        "default_popup": "popup.html"
    },
    "commands": {
        "save_checkpoint": {
            "suggested_key": {
                "windows": "Ctrl+Shift+Y",
                "mac": "Command+Shift+Y",
                "chromeos": "Ctrl+Shift+Y",
                "linux": "Ctrl+Y"
            },
            "description": "Save checkpoint"
        },
        "clear_checkpoints": {
            "suggested_key": {
                "linux": "Ctrl+Q"
            },
            "description": "Delete checkpoints"
        }
    }
    
}